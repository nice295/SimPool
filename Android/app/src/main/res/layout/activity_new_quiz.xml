<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simpool.leedayeon.listdetail.NewQuizActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llBg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="방 제목"
            android:id="@+id/textView5"
            android:layout_above="@+id/etAddTitle"
            android:layout_alignParentStart="true"
            android:background="@color/mainHead"
            android:padding="8dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etAddTitle"
            android:layout_above="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="52dp"
            android:hint="방 제목 입력"
            android:paddingStart="8dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="내기 설명"
            android:id="@+id/textView4"
            android:layout_above="@+id/etAddContent"
            android:layout_alignParentStart="true"
            android:background="@color/mainHead"
            android:padding="8dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etAddContent"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/etAddTitle"
            android:layout_centerVertical="true"
            android:layout_marginBottom="52dp"
            android:hint="내기 설명 입력"
            android:paddingStart="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="종료시간"
            android:id="@+id/textView6"
            android:layout_above="@+id/pickDate"
            android:layout_alignEnd="@+id/textView5"
            android:padding="8dp"
            android:background="@color/mainHead"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜설정"
                android:id="@+id/pickDate"
                android:layout_below="@+id/etAddContent"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="52dp"
                android:layout_weight="1" />

            <Button
                android:text="시간설정"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pickTime12"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:id="@+id/btNext"
        android:background="#2196F3"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
