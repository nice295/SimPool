<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/textUser"
        android:layout_toEndOf="@+id/textUser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title :"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/tTitle"
        android:layout_above="@+id/tvDescription"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description :"
        android:id="@+id/tvDescription"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editDesc"
        android:layout_below="@+id/tvDescription"
        android:layout_alignRight="@+id/editTitle"
        android:layout_alignEnd="@+id/editTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User :"
        android:id="@+id/textUser"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/textUser"
        android:layout_alignLeft="@+id/editTitle"
        android:layout_alignStart="@+id/editTitle"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALL"
            android:id="@+id/radioButton"
            android:layout_alignBottom="@+id/textUser"
            android:layout_alignLeft="@+id/editTitle"
            android:layout_alignStart="@+id/editTitle"
            android:layout_gravity="left" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MINE"
            android:id="@+id/radioButton2"
            android:layout_alignTop="@+id/radioGroup"
            android:layout_toEndOf="@+id/radioGroup" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date :"
        android:id="@+id/text"
        android:layout_alignBottom="@+id/editDate"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editDate"
        android:layout_below="@+id/editDesc"
        android:layout_toEndOf="@+id/text" />

</RelativeLayout>