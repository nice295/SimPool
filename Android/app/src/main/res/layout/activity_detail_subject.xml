<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_subject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leedayeon.listdetail.DetailSubjectActivity"

    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription"
            android:id="@+id/tvDescription"
            android:layout_gravity="left|center_vertical"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/tvTitle"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/answer"
            android:layout_marginTop="41dp"
            tools:textSize="24sp"
            android:layout_below="@+id/tvQuiz"
            android:layout_alignStart="@+id/tvQuiz"
            android:hint="정답 입력" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMsg"
            android:layout_below="@+id/tvDescription"
            android:layout_alignStart="@+id/tvDescription"
            android:layout_marginTop="24dp"
            android:textSize="18sp" />

        <view
            android:layout_width="50dp"
            android:layout_height="50dp"
            class="de.hdodenhof.circleimageview.CircleImageView"
            android:id="@+id/ivProfile"
            android:layout_alignTop="@+id/tvTitle"
            android:layout_alignStart="@+id/tvDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:id="@+id/tvTitle"
            android:layout_marginTop="17dp"
            tools:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivProfile"
            android:layout_marginStart="16dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/tvQuiz"
            android:textSize="22sp"
            android:layout_below="@+id/tvMsg"
            android:layout_alignStart="@+id/tvMsg" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Join"
        android:id="@+id/btJoin"
        android:layout_gravity="center"
        android:clickable="false"
        tools:text="Joining"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#2196F3"
        android:textColor="#FFFFFF" />


</RelativeLayout>
