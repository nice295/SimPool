<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_subject2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leedayeon.listdetail.DetailSubjectActivity2"
    >

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/relativeLayout">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:id="@+id/tvTitle"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tvDescription"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription"
            android:id="@+id/tvDescription"
            android:layout_gravity="left|center_vertical"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_below="@+id/tvTitle"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="It&apos;s over!"
            android:id="@+id/tvMsg"
            android:layout_below="@+id/tvDescription"
            android:layout_alignStart="@+id/tvDescription"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_height="wrap_content"
            android:id="@+id/tvQuiz"
            android:layout_below="@+id/tvMsg"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="38dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:text="enter answer"
        android:id="@+id/btEnter"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:onClick="onClick (DetailActivity2)"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#2196F3"
        android:textColorLink="?attr/colorBackgroundFloating"
        android:textColor="@color/colorAccent" />


</RelativeLayout>
