<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_subject2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leedayeon.listdetail.DetailSubjectActivity2"
    >

    <RelativeLayout
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription"
            android:id="@+id/tvDescription"
            android:layout_gravity="left|center_vertical"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_height="wrap_content"
            android:id="@+id/tvQuiz"
            android:layout_below="@+id/tvMsg"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="38dp"
            tools:textSize="24sp" />

        <view
            android:layout_width="50dp"
            android:layout_height="50dp"
            class="de.hdodenhof.circleimageview.CircleImageView"
            android:id="@+id/ivProfile"
            android:layout_alignTop="@+id/tvTitle"
            android:layout_alignStart="@+id/tvQuiz" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="It&apos;s over!"
            android:id="@+id/tvMsg"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_below="@+id/tvDescription"
            android:layout_alignStart="@+id/tvDescription"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:id="@+id/tvTitle"
            android:layout_marginTop="23dp"
            tools:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tvMsg" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:text="enter answer"
        android:id="@+id/btEnter"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:onClick="onClick (DetailActivity2)"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#2196F3"
        android:textColorLink="?attr/colorBackgroundFloating"
        android:textColor="@android:color/white" />


</RelativeLayout>
