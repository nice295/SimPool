<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:id="@+id/tvTitle"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tvDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription"
            android:id="@+id/tvDescription"
            android:layout_gravity="left|center_vertical"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/tvTitle"
            android:layout_toEndOf="@+id/imageView" />

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/imageView"
            android:layout_gravity="left|top"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:id="@+id/radioButtons"
            android:layout_alignStart="@+id/tvDescription"
            android:layout_marginTop="55dp">

            <RadioButton
                android:text="Item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Item1"
                android:layout_weight="1"
                android:layout_marginTop="0dp" />

            <RadioButton
                android:text="Item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Item2" />

            <RadioButton
                android:text="Item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_toEndOf="@+id/radioGroup2"
                android:layout_marginTop="23dp"
                android:id="@+id/Item3"
                android:layout_weight="1" />

        </RadioGroup>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Join"
        android:id="@+id/btJoin"
        android:layout_gravity="center"
        android:clickable="false"
        android:layout_below="@+id/radioGroup2"
        android:layout_alignStart="@+id/radioGroup2"
        android:layout_marginTop="72dp"
        tools:text="Joining" />

</LinearLayout>
